# Maintainer: Alex Creio <ctlos@protonmail.com>

srcname=ctlos-skel
pkgname=ctlos-xfwm-skel
pkgdesc='Settings xfwm'
pkgver=1.3.0
pkgrel=1
arch=('any')
url="https://github.com/ctlos/ctlos-xfwm-skel"
license=('GPL')
makedepends=('git')
depends=(
         polkit-gnome
         network-manager-applet
         xfce4-power-manager
         xfwm4
         sxhkd
         picom
         jgmenu
         lxmenu-data
         redshift
         dunst
         xsettingsd
         udisks2
         udiskie
         ueberzug
         gsimplecal
         lxappearance
         lxrandr
         nitrogen
         thunar
         thunar-archive-plugin
         thunar-media-tags-plugin
         thunar-volman
         tumbler
         flameshot
         leafpad
         pavucontrol
         viewnior
         xreader
         djvulibre
         parcellite
         wmname
         micro-bin
         multilockscreen-git
         tint2-git
         polybar-git
         jsoncpp
         rxvt-unicode-patched
         urxvt-perls
)
source=("git+$url.git")
sha256sums=('SKIP')
install=README.install

package() {
  cd ${srcdir}/${srcname}/${pkgname}
  mkdir -p "${pkgdir}/usr/bin"
  mkdir -p "${pkgdir}/usr/bin-xfwm"
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/etc/skel-xfwm"
  mkdir -p "${pkgdir}/usr/share/xsessions"

  cp -rf usr/bin/. "${pkgdir}/usr/bin-xfwm"
  cp -f usr/share/xsessions/xfwm.desktop "${pkgdir}/usr/share/xsessions/xfwm.desktop"

  cp -rf etc/skel/. "$pkgdir/etc/skel-xfwm"
  cp -f etc/sddm.conf "${pkgdir}/etc/sddm-xfwm.conf"
}
