# Maintainer: Alex Creio <ctlos@protonmail.com>

pkgname=ctlos-i3-skel
pkgdesc='Settings I3 wm'
pkgver=1.3.0
pkgrel=1
arch=('any')
url="https://github.com/ctlos/ctlos-skel"
license=('GPL')
depends=(
         git
         polkit-gnome
         network-manager-applet
         i3-gaps
         galculator
         gsimplecal
         jgmenu
         lxmenu-data
         lxappearance
         nitrogen
         lxrandr
         thunar
         thunar-archive-plugin
         thunar-media-tags-plugin
         thunar-volman
         tumbler
         xfce4-power-manager
         xfce4-terminal
         file-roller
         flameshot
         leafpad
         pavucontrol
         viewnior
         xreader
         djvulibre
         parcellite
         picom
         redshift
         dunst
         xsettingsd
         udisks2
         udiskie
         skippy-xd-git
         multilockscreen-git
         tint2-git
         polybar-git
         jsoncpp
)
source=("git+$url.git")
sha256sums=('SKIP')
install=README.install

package() {
  cd "${srcdir}/${pkgname}"
  mkdir -p "${pkgdir}/etc/skel"
  mkdir -p "${pkgdir}/etc/skel-i3"

  cp -rf etc/skel/. "$pkgdir/etc/skel-i3"
  cp -rf etc/sddm.conf "${pkgdir}/etc/sddm-i3.conf"
}
